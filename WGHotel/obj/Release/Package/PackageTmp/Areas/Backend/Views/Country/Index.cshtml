@model PagedList.IPagedList<WGHotel.Models.Country>
@{
    ViewBag.Title = "Country";
}

<section class="wrapper">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header">
                        <i class="fa fa-globe" aria-hidden="true"></i>參賽國家
                    </h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="@Url.Action("/", "Hotel")">Home</a></li>
                        <li><i class="fa fa-globe" aria-hidden="true"></i>國家</li>

                    </ol>
                </div>
            </div>


            <div class="row">
                <div class="col-lg-12">
                    @using (Html.BeginForm())
                    {
                        <div class="row">
                            <div class="container">
                                <div class="col-lg-4 col-left">

                                    <div class="input-group">

                                        @Html.TextBox("SearchString", null, new { @class = "form-control", @placeholder = "Search for..." })
                                        <span class="input-group-btn">
                                            <button class="btn btn-primary" type="submit">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                                    </div>

                                </div>
                            </div>
                        </div>

                    }
                    @Html.Partial("_List", Model)
                </div>
            </div>

        </div>
    </div>

</section>


