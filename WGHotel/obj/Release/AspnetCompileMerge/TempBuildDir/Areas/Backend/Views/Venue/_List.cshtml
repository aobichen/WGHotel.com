
@model PagedList.IPagedList<WGHotel.Areas.Backend.Models.VenueModel>
<div class="alert">
    <a class="btn btn-primary" href="@Url.Action("Edit","Venue")">
        新增
    </a>
</div>
<table class="table table-striped table-bordered table-hover">
    <thead>
            <tr>
                <th>
                    運動
                </th>
                <th>
                    場館
                </th>
                <th>
                    類型
                </th>
                <th>
                    sport
                </th>
                <th>
                    Venue
                </th>
                <th>
                    Type
                </th>
                <th>
                    狀態
                </th>
                <th>

                </th>
            </tr>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.SportZH
                </td>
                
               
               
                <td>
                    @item.VenueZH
                </td>
                <td>
                    @item.TypeZH
                </td>
                <td>
                    @item.SportEN
                </td>
                <td>
                    @item.VenueEN
                </td>
                <td>
                    @item.TypeEN
                </td>
                <td>
                    @if (item.Deleted)
                    {
                        <span class="text-danger">已刪除</span>
                    }
                    else
                    {
                        <span class=""></span>
                    }
                </td>
                <td>
                    <div class="btn-group">

                        <a class="btn btn-success" href="@Url.Action("Edit", new { id = item.IDZH})">
                            <i class="fa fa-pencil-square-o"></i>
                        </a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="panel-footer">
    @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }))
</div>