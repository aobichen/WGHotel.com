@model WGHotel.Areas.Backend.Models.VenueModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.HiddenFor(model => model.IDZH)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">類型</label>
            <div class="col-md-10">
                @Html.Partial("_VenueTypeList")
                @Html.ValidationMessageFor(model => model.TypeZH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">運動</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SportZH, new { htmlAttributes = new { @class = "form-control alert-info" } })
                @Html.ValidationMessageFor(model => model.SportZH, "", new { @class = "text-danger" })
            </div>
        </div>
        
        

        

        <div class="form-group">
            <label class="control-label col-md-2">場館名稱</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.VenueZH, new { htmlAttributes = new { @class = "form-control alert-info" } })
                @Html.ValidationMessageFor(model => model.VenueZH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Sport</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SportEN, new { htmlAttributes = new { @class = "form-control alert-success" } })
                @Html.ValidationMessageFor(model => model.SportEN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Venue</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.VenueEN, new { htmlAttributes = new { @class = "form-control alert-success" } })
                @Html.ValidationMessageFor(model => model.VenueEN, "", new { @class = "text-danger" })
            </div>
        </div>

     

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="確定" class="btn btn-primary" />
            </div>
        </div>
    </div>
}


