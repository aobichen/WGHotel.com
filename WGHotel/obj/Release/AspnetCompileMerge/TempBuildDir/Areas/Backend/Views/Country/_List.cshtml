@model PagedList.IPagedList<WGHotel.Models.Country>
<div class="alert">
    <a class="btn btn-primary" href="@Url.Action("Edit","Country")">
        新增
    </a>
</div>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Country
            </th>
            <th>
                Name of the NUSF
            </th>
            <th>
                Tel1
            </th>
            <th>
                Tel2
            </th>
            <th>
               Telmobile
            </th>
            <th>
                Fax
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.NUSF
                </td>
                <td>
                    @item.Tel1
                </td>
                <td>
                    @item.Tel2
                </td>
                <td>
                    @item.Telmobile
                </td>
                <td>
                    @item.Fax
                </td>
                <td>
                    <div class="btn-group">

                        <a class="btn btn-success" href="@Url.Action("Edit", new { id = item.ID})">
                            <i class="fa fa-pencil-square-o"></i>
                        </a>
                       
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>
<div class="panel-footer">
    @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }))
</div>