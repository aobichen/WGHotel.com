@model PagedList.IPagedList<WGHotel.Areas.Backend.Models.BedViewModel>

<div class="alert">
    <a class="btn btn-primary" href="@Url.Action("Edit","Bed")">
        新增
    </a>
</div>
@if (Model.Count > 0)
{
    <table class="table table-striped table-bordered table-hover">
        @*<thead>
                <tr>
                    <th>

                    </th>
                </tr>
            </thead>*@
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>
                        @item.ID
                    </td>
                    <td>
                        @item.NameZH
                    </td>
                    <td>
                        @item.NameEN
                    </td>

                    <td>
                        <div class="btn-group">

                            <a class="btn btn-success" href="@Url.Action("Edit", new { id = item.ID})">
                                <i class="fa fa-pencil-square-o"></i>
                            </a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="panel-footer">
        @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }))
    </div>
}

