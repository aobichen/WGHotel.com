    <script type="text/javascript">

        jQuery(function () {
            var title = $("#title").val();
           
            $('li', '.sidebar-menu').removeClass('active');
           
            var avtive = $('.sidebar-menu').find('li[id=' + title + ']');
            avtive.addClass('active');
            avtive.parents('.sub-menu').addClass('active');
            
        });

        //knob
        $(function () {
            $(".knob").knob({
