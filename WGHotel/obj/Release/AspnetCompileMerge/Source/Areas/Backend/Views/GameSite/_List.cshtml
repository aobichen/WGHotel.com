@model PagedList.IPagedList<WGHotel.Areas.Backend.Models.GameSiteListModel>
<div class="alert">
    <a class="btn btn-primary" href="@Url.Action("Edit","GameSite")">
       新增
    </a>
</div>
<table class="table table-striped table-bordered table-hover">
    @*<thead>
        <tr>
            <th>

            </th>
        </tr>
    </thead>*@
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.SportZH
                </td>
                <td>
                    @item.SportUS
                </td>
                <td>
                    @item.TypeZH
                </td>
                <td>
                    @item.TypeUS
                </td>
                <td>
                    @item.VenueZH
                </td>
                <td>
                    @item.VenueUS
                </td>
                <td>
                    @item.RemarkZH
                </td>
                <td>
                    @item.RemarkUS
                </td>
                <td>
                    <div class="btn-group">

                        <a class="btn btn-success" href="@Url.Action("Edit", new { id = item.IDZH})">
                            <i class="fa fa-pencil-square-o"></i>
                        </a>
                       
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="panel-footer">
    @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }))
</div>