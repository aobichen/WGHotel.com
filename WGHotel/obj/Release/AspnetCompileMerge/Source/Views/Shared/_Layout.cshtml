    <script type="text/javascript">
        (function ($) {
            $(document).ready(function () {
                $('.form').hide();
                $('#form1').show();
                $('.f-item:nth-child(1)').addClass('active');
                $('.f-item:nth-child(1) span').addClass('checked');

                $('#hero-gallery').lightSlider({
                    gallery: true,
                    item: 1,
                    pager: false,
                    gallery: false,
                    slideMargin: 0,
                    speed: 2000,
                    pause: 6000,
                    mode: 'fade',
                    auto: true,
                    loop: true,
                    onSliderLoad: function () {
                        $('#hero-gallery').removeClass('cS-hidden');
                    }
                });
            });
           

            var lang = $.cookie("lang");
            if (typeof lang === "undefined") {
                
                $.cookie("lang", "zh");
                lang = zh;
            }
           
            $('input[name="price"]').on('change', function () {
                let self = $(this);
               
                if (self.prop("checked")) {
                    
                    $('input[name="price"]').each(function () {
                        $(this).closest('span').removeClass("checked");
                        $(this).attr("checked", false);
                    });
                    self.closest('span').addClass("checked");
                    self.prop("checked", true);
                }
                
            });
          
            $("[data-localize]").localize("/Content/lang/language", { language: lang });

            $('.lang-nav').delegate('li', 'click', function (e) {
                let $self = $(this);
                let mylang = $self.attr('id');
                $.cookie("lang", mylang);
                if (mylang != lang) {
                    $('main').css({ 'opacity': '0.2' });
                    $("[data-localize]").localize("/Content/lang/language", { language: mylang });
                    lang = mylang;
                    
                    location.reload();
                   
                }
                
            });

           
        })(jQuery);
    </script>

    
    
