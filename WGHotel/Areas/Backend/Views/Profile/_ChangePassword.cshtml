@model WGHotel.Models.ChangePasswordViewModel

<div class="row">
    <div class="col-lg-12">
       
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
        <section class="panel panel-success">
            <header class="panel-heading">
                變更密碼
            </header>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">舊密碼</label>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">新密碼</label>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">密碼確認</label>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                 <div class="row">
                <div class="form-group">
                    <!-- Buttons -->
                    <div class="col-lg-offset-10 col-md-offset-10 col-sm-12">
                        <button type="submit" class="btn btn-primary">確定</button>

                    </div>
                </div>
            </div>
                </div>
            </div>
        </section>
        }
    </div>
</div>
