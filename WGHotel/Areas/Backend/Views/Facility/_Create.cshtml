@model WGHotel.Areas.Backend.Models.FacilityModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.HiddenFor(model => model.ID)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">中文</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NameZH, new { htmlAttributes = new { @class = "form-control alert-info" } })
                @Html.ValidationMessageFor(model => model.NameZH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">英文</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NameUS, new { htmlAttributes = new { @class = "form-control alert-success" } })
                @Html.ValidationMessageFor(model => model.NameUS, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="確定" class="btn btn-primary" />
            </div>
        </div>

    </div>
}



